@model DetailsViewModel


<html>
<head>
    <meta charset="utf-8" />
    <title>Add custom icons with Markers</title>
    <meta name="viewport" content="initial-scale=1,maximum-scale=1,user-scalable=no" />
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.0.0/mapbox-gl.js"></script>
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.0.0/mapbox-gl.css" rel="stylesheet" />
    <style>
        body {
            margin: 10;
            padding: 10;
        }

        #map {
            position: absolute;
            
            width: 20%;
            height:20%
        }
    </style>
</head>
<body>
    <style>
        .marker {
            display: block;
            border: none;
            border-radius: 50%;
            cursor: pointer;
            padding: 0;
        }
    </style>

    <div id="map"></div>

    <script>

        mapboxgl.accessToken = 'pk.eyJ1IjoidGFua2VyYXMiLCJhIjoiY2tneG9oc2p5MGxxdTJzb2YwZzE1MXI0diJ9.vU-wP4S14RLZ-o5Fob48nA'
        var geojson = {
            'type': 'FeatureCollection',
            'features': [
                {
                    'type': 'Feature',
                    'properties': {
                        'message': 'Foo',
                        'iconSize': [60, 60]
                    },
                    'geometry': {
                        'type': 'Point',
                        'coordinates': [@Model.Images.First().Longitude, @Model.Images.First().Latitude]
                    }
                }
            ]
        };

        var map = new mapboxgl.Map({
            container: 'map',
            style: 'mapbox://styles/mapbox/streets-v11',
            center: [@Model.Images.First().Longitude, @Model.Images.First().Latitude],
            zoom: 13
        });

        // add markers to map
        geojson.features.forEach(function (marker) {
            // create a DOM element for the marker
            var url = "https://tankeras94.blob.core.windows.net/catimages/@Model.Images.First().Url"
            var el = document.createElement('div');
            el.className = 'marker';
            el.style.backgroundSize = "60px"
            el.style.backgroundImage =
                'url(' + url + ')';
                marker.properties.iconSize.join('/') +
                '/)';
            el.style.width = marker.properties.iconSize[0] + 'px';
            el.style.height = marker.properties.iconSize[1] + 'px';

            el.addEventListener('click', function () {
                window.alert(marker.properties.message);
            });

            // add marker to map
            new mapboxgl.Marker(el)
                .setLngLat(marker.geometry.coordinates)
                .addTo(map);
        });
    </script>

</body>
</html>