@model ICollection<AllCatsViewModel>
@using Mapsps.Data.Models
@using Mapsps.Data
@using Mapsps.Services
@using Microsoft.EntityFrameworkCore;
@inject ApplicationDbContext db
@inject CatService catservice
@{

}
<a class="float-right" asp-controller="Cats" asp-action="All" asp-route-sortOrder="Top">Top Писис</a>
<a  asp-controller="Cats" asp-action="All" asp-route-sortOrder="Neglected">Neglected Писис</a>
<div class="m-0"></div>


<div class="row">
    @foreach (var cat in Model)
    {
        <div class="col-sm-2">
            <div class="card">
                <img src="https://tankeras94.blob.core.windows.net/catimages/@cat.ImagesId.FirstOrDefault()" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@cat.MostVotedNickname</h5>
                    <p class="card-text">@cat.City</p>
                    <a class="btn btn-primary" asp-controller="Cats" asp-action="Details" asp-route-id="@cat.Id">Details about @cat.MostVotedNickname</a>

                </div>
            </div>
        </div>

    }
</div>


